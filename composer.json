{
    "name": "humanmade/before-you-go",
    "description": "Editorial tool to show offers or recirculation prompts as a reader exits the site.",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "require": {
        "composer/installers": "~1.0"
    },
    "require-dev": {
        "humanmade/coding-standards": "^1.1.0"
    },
    "scripts": {
        "lint": "phpcs plugin.php inc",
        "lint:fix": "phpcbf plugin.php inc"
	},
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
